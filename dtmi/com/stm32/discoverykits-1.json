{
  "@context": "dtmi:dtdl:context;2",
  "@id": "dtmi:com:stm32:discoverykits;1",
  "@type": "Interface",
  "displayName": "STM32 Discovery Kits",
  "description": "Reports temperature, relative humidity, pressure, magnetometer, accelerometer, gyroscope and proximity",
  "contents": [
    {
      "@type": [
        "Telemetry",
        "Temperature"
      ],
      "name": "temperature",
      "displayName": {
        "en": "Temperature"
      },
      "description": "Temperature in degrees Celsius from HTS221 temperature sensor",
      "schema": "double",
      "unit": "degreeCelsius"
    },
    {
      "@type": [
        "Telemetry",
        "RelativeHumidity"
      ],
      "name": "humidity",
      "displayName": {
        "en": "Relative Humidity"
      },
      "description": "relative humidity from HTS221 sensor",
      "schema": "double",
      "unit": "percent"
    },
    {
      "@type": [
        "Telemetry",
        "Pressure"
      ],
      "name": "pressure",
      "displayName": {
        "en": "Pressure"
      },
      "description": "Pressure from LPS22HB sensor",
      "schema": "double",
      "unit": "millibar"  
    },
    {
      "@type": [
        "Telemetry",
        "Distance"
      ],
      "name": "proximity",
      "displayName": {
        "en": "proximity"
      },
      "description": "Proximity from proximity sensor",
      "schema": "double",
      "unit": "centimetre"
    },
    {
        "@type": [
          "Telemetry",
          "Acceleration"
        ],
        "name": "accelero_x",
        "displayName": "Accelerometer x from LSM6DSL",
        "description": "Acceleration in Gs from LSM6DSL",
        "schema": "double",
        "unit": "gForce"
      },
      {
        "@type": [
          "Telemetry",
          "Acceleration"
        ],
        "name": "accelero_y",
        "displayName": "Accelerometer y from LSM6DSL",
        "description": "Acceleration in Gs from LSM6DSL",
        "schema": "double",
        "unit": "gForce"
      },
      {
        "@type": [
          "Telemetry",
          "Acceleration"
        ],
        "name": "accelero_z",
        "displayName": "Accelerometer z from LSM6DSL",
        "description": "Acceleration in Gs from LSM6DSL",
        "schema": "double",
        "unit": "gForce"
      },
      {
        "@type": [
          "Telemetry",
          "MagneticInduction"
        ],
        "name": "magneto_x",
        "displayName": "Magneto x from LIS3MDL",
        "description": "Magneto data in microtesla from LIS3MDL",
        "schema": "double",
        "unit": "tesla"
      },
      {
        "@type": [
          "Telemetry",
          "MagneticInduction"
        ],
        "name": "magneto_y",
        "displayName": "Magneto y from LIS3MDL",
        "description": "Magneto data in microtesla from LIS3MDL",
        "schema": "double",
        "unit": "tesla"
      },
      {
        "@type": [
          "Telemetry",
          "MagneticInduction"
        ],
        "name": "magneto_z",
        "displayName": "Magneto z from LIS3MDL",
        "description": "Magneto data in microtesla from LIS3MDL",
        "schema": "double",
        "unit": "tesla"
      },
      {
        "@type": [
          "Telemetry",
          "AngularVelocity"
        ],
        "name": "gyro_x",
        "displayName": "Gyroscope x from LSM6DSL",
        "description": "Gyroscope data in radian per second from LSM6DSL",
        "schema": "double",
        "unit": "degreePerSecond"
      },
      {
        "@type": [
          "Telemetry",
          "AngularVelocity"
        ],
        "name": "gyro_y",
